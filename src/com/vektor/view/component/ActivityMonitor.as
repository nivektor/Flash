package com.vektor.view.component{	import flash.display.Sprite;	import flash.events.*;	import flash.utils.Timer;		import org.osflash.signals.Signal;	public class ActivityMonitor extends Sprite	{		private var timer:Timer = new Timer(8500);		public var inactiveSignal:Signal = new Signal();		public var activeSignal:Signal = new Signal();				public function ActivityMonitor():void		{			this.addEventListener(Event.ADDED_TO_STAGE, init);		}				public function enble():void		{			timer.start();			timer.addEventListener(TimerEvent.TIMER, showMsg);			stage.addEventListener(MouseEvent.MOUSE_MOVE, stopTimer);			stage.addEventListener(MouseEvent.MOUSE_DOWN, stopTimer);			stage.addEventListener(MouseEvent.MOUSE_UP, stopTimer);		}				private function init(event:Event):void		{			this.removeEventListener(Event.ADDED_TO_STAGE, init);		}		private function showMsg(e:TimerEvent):void		{			inactiveSignal.dispatch();		}		private function stopTimer(e:MouseEvent):void		{			activeSignal.dispatch();			timer.stop();			timer.start();		}		private function stopTimerK(e:KeyboardEvent):void		{			timer.stop();			timer.start();		}	}}